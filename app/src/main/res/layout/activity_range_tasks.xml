<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_range_tasks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.best.the.androidproject.RangeTasksActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="287dp"
        android:background="@drawable/layout_border"
        android:id="@+id/currentTaskDescription2"
        android:layout_alignTop="@+id/currentDayTasksListView"
        android:layout_alignParentEnd="true">

    </FrameLayout>

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/rangeTasksListView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="194dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/endDateButton" />

    <Button
        android:text="END DATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/startDateButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="61dp"
        android:id="@+id/endDateButton"
        android:visibility="visible" />

    <Button
        android:text="START DATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startDateButton"
        android:visibility="visible"
        android:layout_marginStart="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
